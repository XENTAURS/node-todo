{
  "builders": [{
      "type": "amazon-ebs",
      "region": "us-west-2",
      "source_ami": "ami-4e79ed36",
      "instance_type": "t2.medium",
      "ssh_username": "ubuntu",
      "ami_name": "xentaurs-ic-todo-{{timestamp}}",
      "vpc_id": "vpc-b905dedf",
      "subnet_id": "subnet-05e6eae871375e654",
      "associate_public_ip_address": true,
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 16,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt update",
        "sudo apt dist-upgrade -y",
        "sudo apt install -y git npm nodejs",
        "cd /opt && sudo git clone https://github.com/XENTAURS/node-todo.git",
        "sudo sed -i 's/exit 0/nodejs \\/opt\\/node-todo\\/server.js \\&; exit 0/' /etc/rc.local"
      ]
    }
  ]
}
